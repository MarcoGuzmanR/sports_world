<div class='whole-container' ng-controller = 'playersController' ng-init = 'init()'>
  <div class='l-sidebar'>
    <h4 class='menu-header'>Menu</h4>
    <ul class='side-menu'>
      <li ng-click = "option = 'teams'">Teams</li>
      <li ng-click = "option = 'players'">Players</li>
    </ul>
  </div>

  <div class='main-container'>
    <h3>Famous {{option}} in sports</h3>
    <div>
      <select ng-model = 'sport' ng-options = "sport.capitalize() for sport in sports"></select>
      <br /><br />
      <table class='table table-bordered' ng-show = 'display'>
        <thead>
          <tr class='info'>
            <th>{{headers[option][0]}}</th>
            <th>{{headers[option][1]}}</th>
            <th>{{headers[option][2]}}</th>
          </tr>
        </thead>

        <tbody>
          <tr ng-repeat = 'player in players[option][sport]'>
            <td>{{player.name}}</td>
            <td>{{player.team}}</td>
            <td>{{player.active}}</td>
          </tr>
        </tbody>
      </table>
      <br />
      <button id='toggle_button' type="button" ng-model = 'display' ng-click = 'toggle()'>Show Players</button>
    </div>
  </div>
</div>
